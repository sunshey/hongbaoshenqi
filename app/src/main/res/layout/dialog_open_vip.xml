<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_dialog_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/a7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f7"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开通功能"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_vip_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="永久开启SVIP全部功能"
            android:textColor="@color/red_less_less"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/a7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f7"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要金额"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_vip_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="68.8元"
            android:textColor="@color/red_less_less"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/a7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="选择支付方式"
        android:textSize="@dimen/text_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/a7" />

    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f7"
        android:padding="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_alipay" />

        <TextView
            android:id="@+id/tv_ali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_alipay"
            android:text="支付宝支付"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_ali"
            android:text="(推荐)"
            android:textColor="@color/red_ee2715"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/iv_alipay_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pay_select_press" />
    </RelativeLayout>

    <View
        android:id="@+id/view_ali"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/a7"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_wxpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f7"
        android:padding="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_wxpay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_wxpay"
            android:text="微信支付"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/iv_wxpay_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pay_select_normal" />
    </RelativeLayout>

    <View
        android:id="@+id/view_wx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/a7"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_confirm_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/btn_pay_bg"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />

</LinearLayout>
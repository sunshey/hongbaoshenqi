<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_dialog_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/f6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/share" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="扫一扫更方便\n
分享一次抢红包可提速50%\n
并且有10%的概率可以触发SVIP哦！"
            android:textColor="@color/red_less_less"
            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享链接：" />

            <TextView
                android:id="@+id/tv_share_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://t.iqr.cc/uMb2Uj"
                android:textColor="@color/blue_3862e0" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/btn_red_bg"
            android:text="立即分享"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

</LinearLayout>